{
	"root": true,
	"parserOptions": {
		"ecmaVersion": 2020,
		"ecmaFeatures": {
			"impliedStrict": true
		}
	},
	"plugins": [
		"json",
		"promise",
		"node",
		"standard"
	],
	"extends": [
		"plugin:json/recommended",
		"plugin:promise/recommended",
		"plugin:node/recommended",
		"standard"
	],
	"env": {
		"es6": true,
		"node": true
	},
	"rules": {
		"node/no-deprecated-api": "error",
		"node/no-unpublished-require": "off",
		"node/process-exit-as-throw": "error",
		"promise/param-names": "error"
	}
}
